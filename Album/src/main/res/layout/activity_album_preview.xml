<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.hqq.album.activity.AlbumPreviewActivity">

    <RelativeLayout
        android:id="@+id/album_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_bar_height"
        android:background="@color/black"
        android:gravity="top">

        <com.hqq.album.weight.FilterImageView
            android:id="@+id/album_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/title_view_left_back_padding_left"
            android:paddingRight="@dimen/title_view_left_back_padding_right"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/padding_15"
            android:layout_marginRight="@dimen/padding_15"
            android:ellipsize="middle"
            android:maxLength="12"
            android:singleLine="true"
            tools:text="1/1"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_18"/>

        <LinearLayout
            android:id="@+id/ll_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_10"
                android:background="@drawable/checkbox_selector"
                android:gravity="center"
                />
        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_preview"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/ll_complete"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:background="@drawable/sp_blue"
            android:gravity="center"
            android:text="完成"
            android:paddingLeft="10dip"
            android:paddingRight="10dp"
            android:textColor="#ffffff"/>

        <TextView
            android:visibility="gone"
            android:layout_gravity="right"
            android:id="@+id/album_finish"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:background="@drawable/sp_blue"
            android:gravity="center"
            android:text="完成"
            android:paddingLeft="10dip"
            android:paddingRight="10dp"
            android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>
